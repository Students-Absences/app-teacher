{
    "extends": "@tsconfig/react-native/tsconfig.json",
    "allowJs": false,
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "@/*": ["src/*"],
            "@components/*": ["src/components/*"],
            "@hooks/*": ["src/hooks/*"]
        }
    },
    "forceConsistentCasingInFileNames": true
}
